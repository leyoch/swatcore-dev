<div class="center jumbotron">
  <h1>swat course review.</h1>

  <h2>
    This is the home page for the
    <%= link_to "SwatCoRe", root_path %>
    development page.
  </h2>

  <% if not user_signed_in? %>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Your Swatmail goes here">
          <span class="input-group-btn">
             <%= link_to "Join!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
          </span>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div>
   
  <% else %>

    <%= link_to "View Courses Now!", courses_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Browse by Departments", departments_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Browse by Professor", professors_path, class: "btn btn-lg btn-primary" %>
    
  <% end %>

</div>
